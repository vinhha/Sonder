<resources>

    <style name="Theme.Sonder" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_sonder</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sonder</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sonder</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Sonder</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Sonder</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Sonder</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_sonder</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_sonder</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sonder</item>
        
    </style>

    <style name="ActionBar.Solid.Sonder" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_sonder</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_sonder</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_sonder</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sonder</item>
    </style>

    <style name="ActionBar.Transparent.Sonder" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_sonder</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sonder</item>
        <item name="android:displayOptions"></item>
        
    </style>

    <style name="PopupMenu.Sonder" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sonder</item>	
    </style>

    <style name="DropDownListView.Sonder" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sonder</item>
    </style>

    <style name="ActionBarTabStyle.Sonder" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sonder</item>
    </style>

    <style name="DropDownNav.Sonder" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_sonder</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sonder</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sonder</item>
    </style>
    
    <style name="ProgressBar.Sonder" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sonder</item>
    </style>
    
    <style name="ActionButton.CloseMode.Sonder" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sonder</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sonder.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Sonder</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sonder</item>
    </style>

</resources>
